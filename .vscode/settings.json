{
  // workbench
  "workbench.editorAssociations": {
    "*.db": "sqlite-viewer.option",
    "*.pdf": "default"
  },
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "workbench.activityBar.location": "bottom",

  // editor
  "editor.acceptSuggestionOnEnter": "off",
  "editor.accessibilitySupport": "off",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": true,
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,

  // explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // terminal
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.allowChords": false,

  // window
  "window.title": "${activeEditorLong}",
  "window.commandCenter": false,

  // files
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.git": false
  },

  // debug
  "debug.allowBreakpointsEverywhere": true,

  // notebook
  "notebook.output.scrolling": true,
  "notebook.lineNumbers": "on",

  // Languages

  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },

  "[cython]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ktnrg45.vscode-cython"
  },

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[rust]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },

  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },

  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },

  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },

  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },

  "[bibtex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },

  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },

  // Extensions

  // Pylance
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "python.analysis.typeCheckingMode": "strict",

  // flake8
  "flake8.args": ["--max-line-length=88"], // black

  // JavaScript and TypeScript Nightly
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Jupyter
  "jupyter.askForKernelRestart": false,

  // Markdownlint

  // Markdown PDF
  "markdown-pdf.executablePath": "/Applications/Chromium.app/Contents/MacOS/Chromium",

  // Svelte
  "svelte.enable-ts-plugin": true,

  // Vibrancy Continued
  "terminal.integrated.gpuAcceleration": "off", // need to transparent terminal

  // Vim
  "vim.useSystemClipboard": true,
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/.vimrc",
  "vim.whichwrap": "b,s,h,l,<,>,[,],~",
  "vim.statusBarColorControl": false,

  // AREPL for Python
  "AREPL.show_to_level": 3,
  "AREPL.pythonOptions": ["-O", "-u"],
  "AREPL.customCSS": "",
  "AREPL.skipLandingPage": true,
  "AREPL.showFooter": false,

  // Trailing Spaces
  "trailing-spaces.highlightCurrentLine": false,

  // rust-analyzer
  "rust-analyzer.checkOnSave": true,
  "rust-analyzer.hover.actions.enable": true,
  "rust-analyzer.check.command": "clippy",

  // Git
  "git.confirmSync": false,

  // GitHup Copilot
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },

  // Go
  "go.formatTool": "gofmt",
  "go.lintTool": "golangci-lint",
  "go.toolsManagement.autoUpdate": true,

  // Latex Workshop
  "latex-workshop.latex.recipe.default": "lastUsed",
  "latex-workshop.latex.autoClean.run": "never",
  "latex-workshop.bibtex-format.sort.enabled": true,
  "latex-workshop.bibtex-fields.sort.enabled": true,
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (lualatex)",
      "tools": ["lualatexmk"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "lualatexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-lualatex",
        "-outdir=.output/",
        "%DOC%"
      ],
      "env": {}
    }
  ],
  "latex-workshop.linting.chktex.enabled": true,
  "latex-workshop.linting.chktex.exec.args": [
    "-wall",
    "-n19", // "You should use "’" (ASCII 39) instead of "’" (ASCII 180)." - Many warnings are displayed in Japanese.
    "-n22", // "Comment displayed." - When submit the article, it is necessary to remove the comment.
    "-n30" // "Multiple spaces detected in output." - Incompatible with indentation.
  ],

  // Draw.io Integration
  "hediet.vscode-drawio.resizeImages": null,
  "hediet.vscode-drawio.theme": "atlas",

  // Vibrancy Continued
  "vscode_vibrancy.theme": "GitHub Dark Default",

